<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-xl-12 col-md-12">
                <div class="banner_text">
                    <div class="banner_text_iner ">
                        <h2>Contact us</h2>

                        {{#each errorMessages}}

                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>

                        {{/each}}

                        <form action="/contact" method="post">
                            <div class="form-group">
                                <input type="text" name="name" placeholder="Your name" class="form-control p-4"
                                    value="{{name}}" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" placeholder="Your email" class="form-control p-4"
                                    value="{{email}}">
                            </div>
                            <div class="form-group">
                                <textarea name="message" id="" cols="30" rows="5" class="form-control"
                                    placeholder="Message"></textarea>
                            </div>

                            <input type="submit" value="Send Message" class="button button-contactForm btn_4">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part start-->