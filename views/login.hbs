<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-xl-12 col-md-12">
                <div class="banner_text">
                    <div class="banner_text_iner ">
                        <h2>Please, Login</h2>

                        {{#each errorMessages}}

                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>

                        {{/each}}
                        <form method="post">
                            <div class="form-group">
                                <input type="email" name="email" placeholder="Your email" class="form-control p-4"
                                    autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" placeholder="Your password"
                                    class="form-control p-4">
                            </div>
                            <input type="submit" value="Login" class="button button-contactForm btn_4">
                            <br>
                            <hr>
                            <br>
                            <a href="/auth/facebook" class="btn btn-lg btn-success button-contactForm btn_4">Sign In
                                with facebook</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part start-->